<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.newlifenetwork.counterapp.MainActivity">


    <TextView
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:text="Cricket score keeper"
        android:textSize="35sp"
        android:gravity="center"
        android:id="@+id/head"
        />
    <TextView
        android:textColor="@color/black"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/head"
        android:text="score"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/sc"
        />
    <TextView
        android:textColor="@color/black"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/head"
        android:text="balls"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/ba"
        android:layout_toEndOf="@+id/sc"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:textColor="@color/black"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/head"
        android:text="out"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/out1"
        android:layout_toEndOf="@id/ba"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:text="0"
        android:background="@color/black"
        android:textColor="@color/red"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@+id/sc"
        android:textSize="50sp"
        android:gravity="center"
        android:id="@+id/score"

        />
    <TextView
        android:text="0"
        android:background="@color/black"
        android:textColor="@color/red"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ba"
        android:textSize="55sp"
        android:gravity="center"
        android:id="@+id/balls"
        android:layout_toEndOf="@+id/sc"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:text="0"
        android:background="@color/black"
        android:textColor="@color/red"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@+id/out1"
        android:textSize="55sp"
        android:gravity="center"
        android:id="@+id/outs"
        android:layout_toEndOf="@id/ba"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_below="@+id/score"
        android:text="OVERS"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:id="@+id/ov"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/ov"
        android:layout_below="@+id/outs"
        android:layout_marginLeft="20dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:text="0"
        android:id="@+id/overs"
        android:textSize="55sp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/six"
        android:textSize="30sp"
        android:text="SIX"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/four"
        android:textSize="30sp"
        android:text="FOUR"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/six"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/triple"
        android:textSize="30sp"
        android:text="TRIPLE"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/four"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/single"
        android:textSize="30sp"
        android:text="SINGLE"
        android:layout_width="200dp"
        android:layout_height="55dp"
       android:layout_above="@id/four"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/two"
        android:textSize="30sp"
        android:text="double"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@+id/triple"
        android:layout_toRightOf="@+id/single"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/out"
        android:textSize="30sp"
        android:text="OUT"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_above="@id/single"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/dotball"
        android:textSize="30sp"
        android:text="dotball"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@id/single"
        android:layout_toRightOf="@+id/out"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/noball"
        android:textSize="30sp"
        android:text="NO Ball"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@id/out"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/wide"
        android:textSize="30sp"
        android:text="wide"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@id/out"
        android:layout_toRightOf="@id/noball"
        android:layout_marginBottom="5dp"
        />


</RelativeLayout>
